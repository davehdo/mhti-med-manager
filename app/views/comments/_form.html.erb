<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div class="alert alert-warning">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being sent:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
	  <%= f.text_field :name, class: "form-control" %>
    </div>
	
    <div class="form-group">
      <label for="exampleInputPassword1">Message</label>
	  <%= f.text_area :comment, class: "form-control" %>
    </div>

	<div>
		<label>Choose a handsome photo</label><br />
		<table>
			<tr>
			<%
				[
					"/mugshot-zack.png", 
					"/mugshot-shetty.jpg",
					"/mugshot-betty.png",
					"/mugshot-dug.jpg",
					"/mugshot-bey.jpg"
				].each_with_index do |img_url, i|
			%>
				<td>
					<label><%= f.radio_button :image_url, img_url %> <%= i + 1 %><br />
						<%= image_tag img_url, class: "img-circle", style: "width: 120px; " %>
					</label>
				</td>
			<% end %>
			
			</tr>
		</table>
	</div>

	<div class="text-center">
		<%= f.submit "Send Message", class:"btn btn-primary btn-large" %>
	</div>
<% end %>
